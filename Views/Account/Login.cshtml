@{ Layout = null; }
@model Cua.ViewModels.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="login-dark">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="login">
            <h2 class="sr-only">Login form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Email" placeholder="Email"/>
                <span asp-validation-for="Email" ></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Password"/>
                <span asp-validation-for="Password" ></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="Log In" />
            </div>
            <a class="forgot" asp-action="RestorePassword" asp-controller="Account">Forgot your password?</a>
            <a class="forgot" asp-action="Register" asp-controller="Account">First time here?</a>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>