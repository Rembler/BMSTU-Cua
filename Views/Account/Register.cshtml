@{ Layout = null; }
@model Cua.ViewModels.RegisterModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cua</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="login-dark">
        <form class="login" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <h2 class="sr-only">Register form</h2>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Name" placeholder="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Surname" placeholder="Surname"/>
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" asp-for="Email" placeholder="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" placeholder="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Repeat password" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-block" type="submit" value="Register" />
            </div>
            <a class="forgot" asp-action="Login" asp-controller="Account">I already have an account</a>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>