@model Cua.ViewModels.CreateRoomModel

<form class="login" asp-action="Create" asp-controller="Room" asp-anti-forgery="true">
    <h2 class="sr-only">Create room form</h2>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input class="form-control" type="text" asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary btn-block" type="submit" value="Create" />
    </div>
</form>