@model IEnumerable<Room>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <p id="got-id" hidden></p>
        <div class="modal-content separate-div modal-div">
            <div class="modal-header">
                <div class="room-content content-modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Want to join a room?</h5>
                </div>
            </div>
            <div class="modal-footer">
                <button id="addRoom" type="button" class="btn btn-primary yn-btn">Yes</button>
                <button type="button" class="btn btn-secondary yn-btn" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<div class="container my-container">
<div class="row">
    <div class="aling-self-start col-3 separate-div criteria-div">
        <div class="room-content criteria-header"><p>Search criteria</p></div>
        <input id="room-cri" class="find-room-input criteria-input" type="text" placeholder="Room name"/>
        <input id="admin-cri" class="find-room-input criteria-input" type="text" placeholder="Admin name"/>
        <input id="company-cri" class="find-room-input criteria-input" type="text" placeholder="Company name"/>
        <div class="checkbox-holder">
            <input type="checkbox"/><label>Private room?</label>
        </div>
    </div>
    <div id="room-for-join-holder" class="flex-fill ml-5">
    @{var index = 0;}
    @foreach (var item in Model)
    {
        {index++;}
        <div class="separate-div room-for-join-div">
            <p id="roomId-@item.Id" class="hidden-p" hidden>@item.Id</p>
            <div class="row">
                <div class="col">
                    <div class="row">
                        <div class="col-1 illustration"><i class="icon ion-ios-locked-outline"></i></div>
                        <div class="col room-content"><p class="room-name">@item.Name</p></div>
                        <div class="col-4 room-content">
                            @foreach (var user in item.Users)
                            {   
                                if (user.Id == item.AdminId)
                                {
                                    <p class="admin-name">Admin: @user.Name @user.Surname @index</p><br/>
                                    break;
                                }
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col room-content"><p>Что-то</p></div>
                        <div class="col room-content"><p>Кто-то</p></div>
                    </div>
                    <div class="row">
                        <div class="col room-content"><p>Что-то</p></div>
                        <div class="col room-content"><p>Кто-то</p></div>
                    </div>
                    <div class="row">
                        <div class="col room-content company-name"><p>Company: @index</p></div>
                        <div class="col room-content"><p>Participants: 10:</p></div>
                        <div class="col join-btn-holder"><button class="btn btn-primary join-room-btn" data-toggle="modal" data-target="#exampleModalCenter">Join</button></div>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
</div>
</div>