<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/momentjs/moment.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/lib/daterangepicker/daterangepicker.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-ui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/some.css" />
    <link rel="stylesheet" href="~/css/room.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark my-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cua</a>
                <div class="illustration nav-illustration">
                    <a class="justify-content-center" href="#" onclick="return false;" data-toggle="modal" data-target="#notificationModal" title="Уведомления"><ion-icon name="mail-outline"></ion-icon></a>
                </div>
                <div class="btn-group dropleft">
                    <button class="btn dropdown-toggle my-header-dropdown" type="button" id="dropdownMenuHeaderButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Mой аккаунт
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuHeaderButton">
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Requests">Запросы</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Settings">Настройки</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>                                   
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="modal fade" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content separate-div modal-div">
                <div class="modal-header">
                    <div class="content-div content-modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Ваши уведомления</h5>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="notifications-holder" class="my-stored-items"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2021 - Cua
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/notifications.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
