@{
    ViewData["Title"] = "Создать расписание";
}

@model Cua.ViewModels.CreateTimetableModel

<div class="container my-create-room-container separate-div">
    <form class="login" asp-action="Create" asp-controller="Timetable" asp-anti-forgery="true">
        <h2 class="sr-only">Create timetable form</h2>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group my-create-input-div">
            <input class="my-input" type="text" asp-for="Name" placeholder="Название" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group my-create-input-div">
            <input class="my-input" type="text" name="daterange" /> 
        </div>
        <div class="form-group my-create-input-div">
            <input class="my-input" type="number" asp-for="AppointmentDuration" placeholder="Длительность приема" value="" />
            <span asp-validation-for="AppointmentDuration"></span>
        </div>
        <div class="form-group my-create-input-div">
            <input class="my-input" type="number" asp-for="BreakDuration" placeholder="Длительность перевыва" value="" />
            <span asp-validation-for="BreakDuration"></span>
        </div>
        <div class="form-group">
            <input type="hidden" id="start-date-input" class="my-input" asp-for="StartDate" value=@DateTime.Now.ToString("yyyy-MM-dd") />
        </div>
        <div class="form-group">
            <input type="hidden" id="end-date-input" class="my-input" asp-for="EndDate" value=@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd") />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="RoomId" value=@Model.RoomId />                            
        </div>
        <div class="form-group row">
            <a class="my-create-room-back-link" asp-controller="Room" asp-action="Control" asp-route-id=@Model.RoomId>
                <button type="button" class="btn btn-secondary my-create-room-back-btn">Назад</button>
            </a>
            <input class="btn btn-primary my-create-room-btn" type="submit" value="Создать" />
        </div>
    </form>
</div>
<script src="~/js/daterange.js" asp-append-version="true"></script>